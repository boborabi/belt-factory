.wrapper
  .side-bar
    = form_with(model: @user, url: user_session_path, local: true) do |form|
      .side-bar__login-form.clearfix
        .form
          社員番号
          .form__input
            = form.text_field :number, autofocus: true
        .form
          パスワード
          .form__input
            = form.password_field :password, autocomplete: "off"
        .login-btn
          = form.submit "ログイン"

  .main-content
    = link_to "製造部アカウントでゲストログイン", users_production_guest_sign_in_path, method: :post
    %br
    = link_to "営業部アカウントでゲストログイン", users_sales_guest_sign_in_path, method: :post
